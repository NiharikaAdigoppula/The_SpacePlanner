    style.
      /* General Styles */
      body {
        margin: 0;
        font-family: Arial, sans-serif;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: url('assests/img/interior-background.jpg') no-repeat center center fixed;
        background-size: cover;
        color: #333;
      }
      main {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      /* Header Styles */
      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
        background: #2c3e50;
        color: #fff;
      }
      .logo {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        overflow: hidden;
      }
      .logo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .header-title {
        font-size: 24px;
        text-align: center;
        flex-grow: 1;
      }
      nav ul {
        list-style: none;
        display: flex;
        gap: 15px;
        margin: 0;
        padding: 0;
      }
      nav ul li a {
        text-decoration: none;
        color: #fff;
        font-weight: bold;
        transition: color 0.3s;
      }
      nav ul li a:hover {
        color: #3498db;
      }
      /* Pricing Container */
      .container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 20px;
        max-width: 1200px;
        width: 100%;
        padding: 20px;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 8px;
        text-align: center;
      }
      .container h2 {
        width: 100%;
        margin-bottom: 20px;
        color: #333;
      }
      .section {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
        margin: 10px;
        width: calc(25% - 30px);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
      }
      .item-container {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .pricing-button {
        padding: 10px;
        background-color: blue;
        color: white;
        border: none;
        cursor: pointer;
        margin-top: 10px;
      }
      .price-display {
        margin-top: 10px;
        font-weight: bold;
        color: #2c3e50;
        font-size: 1.2rem;
      }
      /* Footer Styles */
      footer {
        background: #2c3e50;
        color: #FFEB55;
        padding: 40px 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }
      footer .footer-container {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        width: 80%;
      }
      footer .footer-column {
        width: 30%;
        padding: 10px;
      }
      footer h3 {
        margin-bottom: 15px;
        color: #FFEB55;
      }
      footer ul {
        list-style: none;
      }
      footer ul li {
        margin-bottom: 10px;
      }
      footer ul li a {
        color: #fff;
        text-decoration: none;
        transition: color 0.3s;
      }
      footer ul li a:hover {
        color: #FFEB55;
      }
      footer .social-icons {
        display: flex;
        justify-content: space-around;
        margin-top: 10px;
      }
      footer .social-icons a {
        color: #fff;
        font-size: 1.5rem;
        transition: color 0.3s;
      }
      footer .social-icons a:hover {
        color: #FFEB55;
      }
      footer .newsletter {
        text-align: center;
      }
      footer input[type="email"] {
        padding: 10px;
        width: 80%;
        margin-bottom: 10px;
        border-radius: 5px;
        border: none;
      }
      footer button[type="submit"] {
        padding: 10px 20px;
        background-color: #D91656;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      footer button[type="submit"]:hover {
        background-color: #EE66A6;
      }
      footer .copyright {
        text-align: center;
        margin-top: 20px;
        font-size: 0.9rem;
      }
      @media (max-width: 768px) {
        footer .footer-column {
          width: 100%;
          margin-bottom: 20px;
        }
        .section {
          width: 100%;
        }
      }

