doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Our Services - The Space Planner
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
    link(rel="stylesheet", href="assests/css/styles.css")
  body
    header
      .logo
        img(src="assests/img/logo.png", alt="Company Logo")
      h1.header-title The Space Planner
      nav
        ul 
        a(href="/account") My Account
              a(href="/services") Services
              a(href="/portfolio") Portfolio
              a(href="/testimonials") Testimonials
              a(href="/prices") Our Prices

          form(action="/index", method="get")
            button.logout Logout
    main
      // Outer Container
      .outer-container
        h2 What Our Clients Say
        p See what our clients have to say about working with us.

        // Inner Container for Testimonials
        .inner-container
          // Individual Testimonial Item
          .individual-container
            img(src="assests/img/client1.jpg", alt="Client 1")
            p "The Space Planner transformed my living room into a cozy and stylish space. I absolutely love it!"
            h4 - Sarah K.
          
          // Individual Testimonial Item
          .individual-container
            img(src="assests/img/client2.jpg", alt="Client 2")
            p "Their attention to detail and creativity is amazing. They truly brought my vision to life."
            h4 - John D.
          
          // Individual Testimonial Item
          .individual-container
            img(src="assests/img/client3.jpg", alt="Client 3")
            p "I couldn't be happier with the final result. The Space Planner exceeded my expectations!"
            h4 - Emily R.

    // Footer
    footer
      .footer-container
        // Column 1: Quick Links
        .footer-column
          h3 Quick Links
          ul
           a(href="/account") My Account
              a(href="/services") Services
              a(href="/portfolio") Portfolio
              a(href="/testimonials") Testimonials
              a(href="/prices") Our Prices

          form(action="/index", method="get")
            button.logout Logout
        // Column 2: Social Media Links
        .footer-column
          h3 Follow Us
          .social-icons
            a(href="#") 
              i.fab.fa-facebook
            a(href="#") 
              i.fab.fa-twitter
            a(href="#") 
              i.fab.fa-instagram

        // Column 3: Newsletter Subscription
        .footer-column.newsletter
          h3 Subscribe to Our Newsletter
          p Get the latest deals and offers directly in your inbox!
          form(action="subscription.html", method="get")
            input(type="email", name="email", placeholder="Enter your email", required)
            button(type="submit") Subscribe

      .copyright
        p &copy; 2024 The Space Planner. All rights reserved.

    script(src="assests/js/newscript.js")
